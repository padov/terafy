# Configurações do Banco de Dados
DB_HOST=postgres_db
DB_PORT=5432
DB_NAME=terafy_db
# Use 'terafy_app' após criar o usuário (migration 20251124000000_create_app_user.sql)
# Para desenvolvimento inicial, pode usar 'postgres'
DB_USER=terafy_app
DB_PASSWORD=terafy_app_password

# SSL do Banco (disable para local, require para produção)
DB_SSL_MODE=disable

# Configurações do Servidor
SERVER_PORT=8080

# Configurações JWT
JWT_SECRET_KEY=sua-chave-secreta-super-segura-aqui-mude-em-producao
JWT_EXPIRATION_DAYS=7

# Configurações do Nginx (opcional)
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

